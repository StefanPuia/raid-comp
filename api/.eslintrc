{
    "$schema": "https://json.schemastore.org/eslintrc",
    "overrides": [
      {
        "plugins": ["@typescript-eslint"],
        "extends": ["plugin:@typescript-eslint/recommended"],
        "files": ["./api/src"],
        "parser": "babel-eslint",
        "parserOptions": {
          "ecmaVersion": 2017,
          "sourceType": "module"
        },
        "env": {
          "es6": true
        },
        "rules": {
          "react-hooks/rules-of-hooks": "off"
        }
      }
    ],
    "rules": {
      "react-hooks/rules-of-hooks": "off"
    }
  }