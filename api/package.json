  "scripts": {
    "tsc": "tsc",
    "start": "ts-node src/index.ts",
    "start:watch": "nodemon --exec ts-node src/index.ts",
    "start:in:docker": "node dist/index.js",
    "build": "npm run clean && tsc && npm run swagger",
    "clean": "rimraf dist",
    "lint": "eslint ./src/**/*.ts",
    "lint:fix": "tslint --fix ./src/**/*.ts -t verbose",
    "pretest": "cross-env NODE_ENV=test npm run build && npm run lint",
    "test": "cross-env NODE_ENV=test jest",
    "test:coverage": "cross-env NODE_ENV=test jest --collect-coverage",
    "test:watch": "nodemon --exec cross-env NODE_ENV=test jest",
    "swagger": "swaggerGen -c ./swagger.config.yml"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "10.0.0",
    "express": "^4.17.1",
    "mongoose": "5.12.13",
    "morgan": "1.10.0",
    "node-cron": "^3.0.0",
    "node-fetch": "^2.6.1",
    "node-html-parser": "^3.3.4",
    "passport-jwt": "^4.0.0",
    "sha256": "^0.2.0",
    "typescript-rest": "^3.0.2",
    "typescript-rest-swagger": "^1.1.5"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@types/cors": "^2.8.10",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.12",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.2",
    "@types/node-cron": "^2.0.3",
    "@types/node-fetch": "^2.5.7",
    "@types/passport-jwt": "^3.0.1",
    "@types/request": "^2.48.5",
    "@types/sha256": "^0.2.0",
    "@typescript-eslint/parser": "^4.11.1",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^27.0.2",
    "cross-env": "^7.0.3",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^27.0.4",
    "jest-html-reporter": "^3.3.0",
    "request": "^2.88.2",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.9",
    "ts-jest": "^27.0.2",
    "ts-node": "^10.0.0",
    "typescript": "^4.1.3"
