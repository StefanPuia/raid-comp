{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": false,
    "strictNullChecks": false,
    "target": "ES6"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "../src",
    "../node_modules"
  ]
}
